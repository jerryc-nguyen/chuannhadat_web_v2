{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "workbench.editor.wrapTabs": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Feature-Driven Development folder structure recommendations
  "workspace.recommended.structure": {
    "src/views": "Main features directory",
    "src/views/[feature-name]": "Feature is named as URL slug (e.g., main-financial-management)",
    "src/views/[feature-name]/components": "Components specific to the feature",
    "src/views/[feature-name]/hooks": "Custom hooks used by the feature",
    "src/views/[feature-name]/types": "TypeScript types for the feature",
    "src/views/[feature-name]/constants": "Constants used by the feature",
    "src/views/[feature-name]/states": "State management for the feature",
    "src/views/[feature-name]/apis": "API functions for the feature",
    "src/views/[feature-name]/query": "React Query implementations for the feature",
    "src/common": "Shared utilities across features",
    "src/hooks": "Shared hooks across features",
    "src/components": "Shared components across features",
    "src/apis": "Shared API functions across features"
  },

  // File templates for new features
  "files.newFeature.templates": {
    "index.ts": "export * from './components';\nexport * from './hooks';\nexport * from './types';\n",
    "components/index.ts": "// Export feature-specific components\n",
    "hooks/index.ts": "// Export feature-specific hooks\n",
    "types/index.ts": "// Export feature-specific types\n",
    "constants/index.ts": "// Export feature-specific constants\n",
    "apis/index.ts": "// Export feature-specific API functions\n",
    "query/index.ts": "// Export feature-specific React Query implementations\n"
  },

  // File associations
  "files.associations": {
    "*/views/*/apis/*.ts": "typescript",
    "*/views/*/components/*.tsx": "typescriptreact",
    "*/views/*/hooks/*.ts": "typescript",
    "*/views/*/types/*.ts": "typescript",
    "*/views/*/constants/*.ts": "typescript",
    "*/views/*/query/*.ts": "typescript"
  },

  // UI Development Guidelines
  "ui.development.guidelines": {
    "assistantRole": "Senior Frontend UI Engineer",
    "beforeUiImplementation": "Consult Claude as a Senior Frontend UI Engineer for optimized solutions",
    "uiComponentGoals": [
      "Responsiveness across all device sizes",
      "Accessibility compliance (WCAG 2.1)",
      "Consistent styling with existing components",
      "Performance optimization",
      "Reusability"
    ]
  },

  // Snippet prefixes for quick feature development
  "editor.snippetSuggestions": "top",
  "editor.suggest.showSnippets": true
}
